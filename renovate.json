{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "docker:enableMajor"],
  "packageRules": [
    {
      "matchDepTypes": ["test"],
      "automerge": true
    },
    {
      "groupName": "automerge",
      "matchPackagePrefixes": ["cross-env", "d3", "lru-cache", "ts-invariant", "luxon"],
      "automerge": true
    },
    {
      "groupName": "chakra",
      "matchPackagePrefixes": ["@chakra-ui/", "@emotion/", "framer-motion"]
    },
    {
      "groupName": "remix",
      "matchPackagePrefixes": ["@remix-run/"]
    },
    {
      "groupName": "react",
      "matchPackagePrefixes": ["react", "@types/react"]
    }
  ]
}
