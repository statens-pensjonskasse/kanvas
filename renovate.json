{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "docker:enableMajor"],
  "packageRules": [
    {
      "matchDepTypes": ["test"],
      "automerge": true
    },
    {
      "groupName": "automerge",
      "matchPackagePatterns": ["cross-env", "d3", "lru-cache", "ts-invariant"],
      "automerge": true
    },
    {
      "groupName": "chakra",
      "matchPackagePatterns": ["@chakra-ui/*", "@emotion/*", "framer-motion"]
    },
    {
      "groupName": "remix",
      "matchPackagePatterns": ["@remix-run/*"]
    },
    {
      "groupName": "react",
      "matchPackagePatterns": ["react"]
    }
  ]
}
