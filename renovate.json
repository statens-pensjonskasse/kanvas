{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchPackagePatterns": ["@chakra-ui/*", "@emotion/*"],
      "groupName": "chakra"
    },
    {
      "matchPackagePatterns": ["@remix-run/*"],
      "groupName": "remix"
    },
    {
      "matchPackagePatterns": ["react"],
      "groupName": "react"
    }
  ]
}
