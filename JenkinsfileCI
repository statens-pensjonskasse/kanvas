#!groovy
@Library('jenkins-pipeline-library')
import no.spk.jenkins.pipeline.ci.config.CIPipelineConfig

ciPipeline {
    config = CIPipelineConfig
            .getGitflowConfig(autoDeploy: true, useHarbor: true)
            .useDocker(branchPostfix: true)
            .withVersionStrategy(strategy: 'semver_patch')
            .withGit(developBranch: 'develop')
            .withSlackNotifications(channels: 'panda-ci', prefix: ':panda_face:')
            .withEmailNotifications()
}
